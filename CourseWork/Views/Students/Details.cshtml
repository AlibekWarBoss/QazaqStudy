@model CourseWork.Models.Student

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">

    <div class="jumbotron">
        <h1 class="display-4">@Model.Name @Model.Surname</h1>
        <p class="lead">@Model.Age years old</p>
        <p class="lead">from @Model.Country</p>
        <hr class="my-4">
        <p>@Model.Email</p>
        <a class="btn btn-warning" class="form-control" href="/Students/Edit/@Model.Id" role="button">Edit</a>
        <a class="btn btn-danger" class="form-control" href="/Students/Delete/@Model.Id" role="button">Delete</a>
    </div>
</div>
