@model IEnumerable<CourseWork.Models.Course>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container ">
    <div class="row mt-5 text-center">
        <h1 style="margin-left: auto;margin-right: auto">Courses</h1>
    </div>
    <div class="row mt-2 text-left">
        <a href="Courses/Create" type="button" class="btn btn-outline-warning" style="">
            +ADD NEW
        </a>
    </div>
    <div class="row mt-4">
        <div class="col-sm-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Course NAME</th>
                        <th>Level</th>
                        <th>Department</th>
                        <th>Duration</th>
                        <th>DETAILS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Course_Name</td>
                            <td>@item.Level.Level_Name</td>
                            <td>@item.Department.Department_Name</td>
                            <td>@item.CourseDuration month</td>
                            <td>
                                <a href="Courses/Details/@item.Id"
                                   class="btn btn-info btn-sm">DETAILS</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
