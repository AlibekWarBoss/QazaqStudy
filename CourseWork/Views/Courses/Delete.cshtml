@model CourseWork.Models.Course

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <div class="container">
    <div class="jumbotron">
        <h2>@Model.Course_Name , @Model.Level.Level_Name level</h2>
        <p class="lead">@Model.Department.Department_Name</p>
        <hr class="my-4">
        <p>Duration @Model.CourseDuration month</p>
        <a class="btn btn-warning btn-lg" href="~/Courses/Edit/@Model.Id" role="button">Edit</a>

    </div>
    <a href="/" class="btn btn-success">Back to List</a>
    <a class="btn btn-danger" href="~/Courses/Delete/@Model.Id" role="button">Delete</a>
</div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-warning" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
