@model IEnumerable<CourseWork.Models.CourseSelection>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container ">
    <div class="row mt-5 text-center">
        <h1 style="margin-left: auto;margin-right: auto">Selection</h1>
    </div>
    <div class="row mt-2 text-left">
        <a href="~/CourseSelections/Create" type="button" class="btn btn-outline-danger" style="">
            +ADD NEW
        </a>
    </div>
    <div class="row mt-4">
        <div class="col-sm-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Payment Check</th>
                        <th>DETAILS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Payment.Student.Name @item.Payment.Student.Surname </td>
                            <td>
                                @if (item.Check == 1)
                                {
                                    <p>True</p>
                                }@if (item.Check == 0)
                                    {
                                      <p>False</p>
                                    }
                            </td>
                            <td>
                                <a href="~/CourseSelections/Details/@item.Id"
                                   class="btn btn-info btn-sm">DETAILS</a>
                            </td>           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
