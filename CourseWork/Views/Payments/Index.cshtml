@model IEnumerable<CourseWork.Models.Payment>

@{
    ViewBag.Title = "Index";
}

<div class="container ">
    <div class="row mt-5 text-center">
        <h1 style="margin-left: auto;margin-right: auto">Payments</h1>
    </div>
    <div class="row mt-2 text-left">
        <a href="Payments/Create" type="button" class="btn btn-outline-warning" style="">
            +ADD NEW
        </a>
    </div>
    <div class="row mt-4">
        <div class="col-sm-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Course NAME</th>
                        <th>Price</th>
                        <th>Student Name</th>
                        <th>Date Of Pay</th>
                        <th>DETAILS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Course.Course_Name</td>
                            <td>@item.Price.price</td>
                            <td>@item.Student.Name @item.Student.Surname</td>
                            <td>@item.dateOfPay month</td>
                            <td>
                                <a href="Payments/Details/@item.Id"
                                   class="btn btn-info btn-sm">DETAILS</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>